<?php

use Basis\Application;

date_default_timezone_set('Europe/Moscow');

include __DIR__.'/vendor/autoload.php';

$app = new Application(__DIR__);
try {
    array_shift($argv);
    $job = $argv ? array_shift($argv) : 'job.info';
    $result = $app->dispatch($job, $argv ?: []);
    var_dump($result);

} catch(Exception $e) {
    echo $e->getMessage();
}
