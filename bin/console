#!/usr/bin/php
<?php

use Basis\Application;

date_default_timezone_set('Europe/Moscow');
$root = getcwd();

include $root.'/vendor/autoload.php';

$app = new Application($root);
try {
    array_shift($argv);
    $job = $argv ? array_shift($argv) : 'job.info';
    $result = $app->dispatch($job, $argv ?: []);
    if($result) {
        var_dump($result);
    }

} catch(Exception $e) {
    echo $e->getMessage();
}
